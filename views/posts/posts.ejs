  <div class="container">
    <div class="row ">
      <div class="col-sm-0 col-md-6 mx-auto mt-3">
        <% for (let i in posts){ %>
          <% if (i < posts.length/2){ %>
            <div class="card2 mb-3">
                <div class = "card-body">
                <h5 class="card-title"><%= posts[i].title %></h5>
                <h6 class = "card-subtitle text-muted text-right">By <%= posts[i].user_name %></h6>
                <p class ="card-text"><%= posts[i].article_top %></p>
                <a href= '/posts/<%= posts[i].id  %>' class="btn btn-sm btn-primary">見に行く</a>
                </div>
            </div>
            <% } %>
        <% } %>
      </div>
      <div class="col-sm-0 col-md-6 mx-auto mt-3">
        <% for (let i in posts){ %>
          <% if (i >= posts.length/2){ %>
            <div class="card2 mb-3">
                <div class = "card-body">
                <h5 class="card-title"><%= posts[i].title %></h5>
                <h6 class = "card-subtitle text-muted text-right">By <%= posts[i].user_name %></h6>
                <p class ="card-text"><%= posts[i].article_top %></p>
                <a href= '/posts/<%= posts[i].id  %>' class="btn btn-sm btn-primary">見に行く</a>
                </div>
            </div>
            <% } %>
        <% } %>
      </div>
    </div>
    <% if (auth) {%>
    <div class = "row">
      <div class = "col-6 mx-auto text-center">
        <a href="/posts/new" class = "mt-3 btn btn-primary">Create new Article</a>
      </div>
    </div>
    <% } %>
  </div>
